extends statsBase

block content
  // image
  #image
    img(src="./img/favpng_gaelic-football-sportart-irish.png", alt="football player png")

  // content
  #content
    h1 Create your account

    form.signup-form(action="/api/v1/users/signup", method="POST")
      // Add a div to display error messages
      #error-message

      .form__group
        label.form__label(for='firstName') First Name:
        input#firstName.form__input(type='text', required, name='firstName')

      .form__group
        label.form__label(for='lastName') Last Name:
        input#lastName.form__input(type='text', required, name='lastName')

      .form__group
        label.form__label(for='email') Email address:
        input#email.form__input(type='email', placeholder='you@example.com', required, name="email")

      .form__group.ma-bt-md
        label.form__label(for='password') Password:
        input#password.form__input(type='password', placeholder='••••••••', required, name="password", minlength='8')

      .form__group.ma-bt-md
        label.form__label(for='passwordConfirm') Confirm Password:
        input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, name="passwordConfirm", minlength='8')

      .form-group
        input.form__button(type="submit", value="Signup")

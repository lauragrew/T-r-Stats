html(lang="en")
head
  meta(charset="UTF-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  title= title
  // CSS link
  link(rel="stylesheet", href="/css/gaa.css")
  // Font Awesome CDN
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")

body
  #container
    // logo
    #logo TÃ­rStats

    // navbar
    #navbar
      ul.navbar-links
        li: a(href="/dashboard") Home
        li: a(href="#") About
        li: a(href="#") Contact

      if user
        #navbar-right
          li#logout
            | Logged in as: &nbsp;
            span.user-name= user.firstName
            span.user-name= user.lastName
            a.nav__el(href="/logout") Logout
      else
        #navbar-right
          li#signup
            a.nav__el(href="/statsSignup1") Sign Up
          li#login
            a.nav__el(href="/statsLogin") Log in

    // CONTENT
    // Specific content for the Record Stats page
    div#record-stats-page
      // Heading
      h1#record-stats-heading Record Game Stats

      // Timer section
      div#timer-section
        label(for="half-duration-dropdown") Choose Half Duration:
        select#half-duration-dropdown
          option(value="30") 30 mins
          option(value="35") 35 mins

        button#start-timer-btn.btn.btn-primary(type="button") Start/Restart Timer
        button#pause-timer-btn.btn.btn-secondary(type="button") Pause Timer
        button#reset-timer-btn.btn.btn-secondary(type="button") Reset Timer

        // Timer display
        div#timer
          | 00:00

      // Add your pitch layout and buttons for recording stats here
      // For example:
      div#pitch-layout
        // Your pitch layout code goes here

      // Flex container for the buttons
      div#buttons-container
        // Dynamically generate buttons for each player's position
        each playerSetup in gameSetupData.playerSetup
          button.record-stat-btn.btn.btn-primary(type="button" data-player-id=playerSetup.playerId data-position=playerSetup.position class="record-stat") Record Stat for #{playerSetup.position}
          // Dropdown menu for stat types
          select.stat-dropdown
            option(value="") -- Select Stat Type --
            option(value="Tackle") Tackle
            option(value="Save") Save
            option(value="Turnover for") Turnover for
            option(value="Turnover Against") Turnover Against
            option(value="Goal") Goal
            option(value="Point") Point
            option(value="Dropped Short") Dropped Short
            option(value="Wide") Wide
            option(value="Free Conceded") Free Conceded
            option(value="Kickout Won") Kickout Won
            option(value="Kickout Lost") Kickout Lost
            // Add more stat types as needed

      // Back to Record Games button (to go back to the list of game setups)
      a.back-to-record-games-btn.btn.btn-secondary(href="/recordGames") Back to Record Games

  // Add any additional JavaScript specific to the recordStats page here
  script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js")
  script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
  script(src="/js/recordStats.js")

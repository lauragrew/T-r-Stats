html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    // CSS link
    link(rel="stylesheet", href="/css/gaa.css")
    // Font Awesome CDN
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")

  body
    #container
      // logo
      #logo TÃ­rStats

      // navbar
      #navbar
        ul.navbar-links
          li: a(href="/dashboard") Home
          li: a(href="#") About
          li: a(href="#") Contact

        if user
          #navbar-right
            li#logout
              | Logged in as: &nbsp;
              span.user-name= user.firstName
              span.user-name= user.lastName
              a.nav__el(href="/logout") Logout
        else
          #navbar-right
            li#signup
              a.nav__el(href="/statsSignup1") Sign Up
            li#login
              a.nav__el(href="/statsLogin") Log in

      // CONTENT
      block content
        // Specific content for the Record Stats page
        div#record-stats-page
          h1 Record Game Stats

          // Add your pitch layout and buttons for recording stats here
          // For example:
          div#pitch-layout
            // Your pitch layout code goes here

          // Example buttons to record stats
          button.record-stat-btn.btn.btn-primary(type="button") Record Goal
          button.record-stat-btn.btn.btn-primary(type="button") Record Assist
          // Add more buttons for other stats as needed

          // Back to Record Games button (to go back to the list of game setups)
          a.back-to-record-games-btn.btn.btn-secondary(href="/recordGames") Back to Record Games


